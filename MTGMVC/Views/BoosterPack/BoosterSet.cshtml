@model BoosterPackViewModel
@{
    ViewData["Title"] = "BoosterSet";
}

<form asp-controller="BoosterPack" asp-action="BoosterSelected" method="post">
    <div class="text-center">
        <h2>Select Set: </h2>
        <div class="text-center">
            <select class="form-select" asp-items="Model.SetList" asp-for="SelectedSet">
                <option value="defaultoption">---Please select a set---</option>
            </select>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary" style="margin-top:20px;">Submit</button>
        </div>
    </div>
</form>

